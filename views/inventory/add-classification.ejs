<div class="form-container">
  <% if (title) { %>
    <h1><%= title %></h1>
  <% } %>

  <% if (message) { %>
    <p class="notice <%= message.type %>"><%= message.message %></p>
  <% } %>

  <% if (errors) { %>
    <ul class="notice error-list">
    <% errors.forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
    </ul>
  <% } %>

  <form id="addClassificationForm" action="/inv/add-classification" method="post">
    <fieldset>
      <legend>Add New Classification</legend>

      <div class="form-group">
        <label for="classification_name">Classification Name:</label>
        <input type="text" id="classification_name" name="classification_name" required pattern="^[a-zA-Z0-9]+$" 
          value="<%= locals.classification_name ? classification_name : '' %>">
        <span class="form-hint">Classification name should contain only alphanumeric characters with no spaces or special characters.</span>
      </div>

      <div class="form-group">
        <button type="submit">Add Classification</button>
      </div>
    </fieldset>
  </form>
</div>

